---
import Header from 'src/components/Header';

export interface Props {
  title: string
}

const { title } = Astro.props
---

<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <meta name='author' content='Daniel Prieto Gaviria' />
    <link rel='icon' type='image/png' href='/assets/icon.png' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <meta
      name='description'
      content='Daniel Prieto Gaviria, Front-end Developer | JavaScript, TypeScript, React.js, Next.js, Astro, Svelte, Node.js, MongoDB, SQL, GraphQl, Figma, Illustrator and Corel'
    />
    <meta
      name='keywords'
      content='daniel prieto gaviria, dpg code, frontend developer, full stack developer, javaScript, typeScript, react.js,next.js, astro, svelte, node.js, mongodb, sql, graphql, figma, illustrator, corel'
    />
  </head>
  <body class='dark:bg-[#0D0D0D] relative'>
    <Header client:only />
    <slot />
  </body>
</html>

<style is:global>
  .navbar a {
    transition: all 0.2s ease-in-out;
  }
  .navbar a:hover {
    color: #0d0d0d;
  }
  .navbar .dot {
    width: 5px;
    height: 5px;
    border-radius: 50%;
    opacity: 0;
    transition: all 0.2s ease-in-out;
  }
  .navbar a:hover ~ .dot {
    transform: translateY(-18px);
    opacity: 1;
  }

  @media only screen and (min-width: 1024px) {
    .navbar a:hover ~ .dot {
      transform: translateY(-30px);
      opacity: 1;
    }
  }
  @media only screen and (min-width: 1536px) {
    .navbar a:hover ~ .dot {
      transform: translateY(-40px);
      opacity: 1;
    }
  }
</style>
