<style is:global>
  html {
    scroll-behavior: smooth;
  }
  ::-webkit-scrollbar {
    width: 6px;
  }
  ::-webkit-scrollbar-track {
    background: transparent;
  } 
  ::-webkit-scrollbar-thumb {
    background: #0D0D0D;
  }
  body{
    font-family: 'Poppins', sans-serif;
  }
</style>
